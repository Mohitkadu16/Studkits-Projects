#define IR_PIN 2
#define LED_PIN 8
#define BUZZER_PIN 9

void setup() {
  pinMode(IR_PIN, INPUT);
  pinMode(LED_PIN, OUTPUT);
  pinMode(BUZZER_PIN, OUTPUT);
  Serial.begin(9600);
  Serial.println("IR Motion Detector Active...");
}

void loop() {
  int sensorState = digitalRead(IR_PIN);

  // Note: Some IR modules output LOW when object detected
  if (sensorState == LOW) {
    Serial.println("Motion/Object Detected!");
    digitalWrite(LED_PIN, HIGH);
    digitalWrite(BUZZER_PIN, HIGH);
    delay(1000); // Alert duration
  } else {
    digitalWrite(LED_PIN, LOW);
    digitalWrite(BUZZER_PIN, LOW);
  }
}
